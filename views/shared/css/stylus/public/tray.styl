#item-tray
  background white
  color black
  padding 1em
  font-size 1.4em
  border-radius 2px
  opacity 0.85
  max-width 300px

  ul
    margin 0
    padding 0

  a.title
    display list-item
    list-style none
    cursor pointer
    line-height 1.4em
    font-weight 300

    &:hover
      text-decoration none


#neatline
  #item-tray
    position absolute
    z-index 999
    right 2em
    top 2em
