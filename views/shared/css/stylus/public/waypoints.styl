#waypoints
  background white
  color black
  padding 1em
  font-size 1.4em
  border-radius 2px
  opacity 0.85
  overflow-y auto
  max-width 300px
  max-height 80%

  ul
    margin 0
    padding 0

  a.title
    display list-item
    list-style none
    cursor pointer
    line-height 1.4em
    font-weight 300

    &:hover
      text-decoration none


#neatline
  #waypoints
    position absolute
    z-index 999
    right 2em
    top 2em

    &.empty
      display none
